<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainback"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

        <EditText
            android:id="@+id/txtname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName" />

    <EditText
            android:id="@+id/txtstrasse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Straße"
            android:inputType="textPersonName" />

    <EditText
            android:id="@+id/txtstadt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Stadt"
            android:inputType="textPersonName" />

    <EditText
            android:id="@+id/txtplz"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="PLZ"
            android:inputType="textPersonName" />

    <EditText
            android:id="@+id/txttelefon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Telefonnummber"
            android:inputType="textPersonName" />

    <EditText
            android:id="@+id/txttermin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Wann können wir vorbeikommen?"
            android:inputType="textPersonName" />

    <EditText
            android:id="@+id/txtmahl"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Anzhal der Mähler?"
            android:inputType="textPersonName" />

    <Button
            android:id="@+id/buttonschicken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Schicken" />
    </LinearLayout>